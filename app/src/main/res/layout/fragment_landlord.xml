<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:padding="5dip">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_house"
        android:layout_margin="10dip"
        android:layout_gravity="end"
        android:id="@+id/btnAdd"
        app:icon="@drawable/ic_add_house"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Hourses"
        android:layout_gravity="center_horizontal"
        android:layout_margin="5dip"
        android:textColor="@android:color/black"
        android:textSize="17sp"
        android:fontFamily="sans-serif"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/rv_houses"
            android:layout_margin="5dip"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You have no houses yet ..."
            android:textSize="20sp"
            android:id="@+id/txt_no_houses"
            android:fontFamily="sans-serif-black"
            android:textStyle="bold"
            android:drawableStart="@drawable/ic_landlord"
            android:drawablePadding="5dip"
            app:drawableTint="@android:color/black"
            android:layout_gravity="center"/>

    </FrameLayout>

</LinearLayout>